<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <RootNamespace>Peerislands.Azure.Functions.Extension.MongoDB</RootNamespace>
    <PackageId>Peerislands.Azure.Functions.Extension.MongoDB</PackageId>
    <AssemblyName>Peerislands.Azure.Functions.Extension.MongoDB</AssemblyName>
    <Description>Peerislands Azure WebJobs SDK MongoDB Extension.</Description>
    <Version>1.0.2</Version>
    <Authors>Sai Kiran Gajjala</Authors>
    <Company>Peerislands.io</Company>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Microsoft.Azure.WebJobs.Extensions" />
    <None Remove="WebJobs.Extension.MongoDB\" />
    <None Remove="MongoDB.Driver" />
    <None Remove="WebJobs.Extension.MongoDB\Trigger\" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Azure.WebJobs.Extensions" Version="4.0.1" />
    <PackageReference Include="MongoDB.Driver" Version="2.18.0" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="WebJobs.Extension.MongoDB\" />
    <Folder Include="WebJobs.Extension.MongoDB\Trigger\" />
  </ItemGroup>
</Project>
